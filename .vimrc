function! s:run_gnome(opts)
	let cmds = []
	let cmds += ['cd ' . shellescape(getcwd()) ]
	let cmds += [a:opts.cmd]
	let cmds += ['read -n1 -rsp "press any key to continue ..."']
	let text = shellescape(join(cmds, ";"))
	let command = 'gnome-terminal -- bash -c ' . text
	call system(command . ' &')
endfunction

